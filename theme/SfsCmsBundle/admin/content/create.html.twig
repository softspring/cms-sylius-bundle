{% trans_default_domain 'sfs_cms_contents' %}

{% extends '@SfsCms/admin_layout.html.twig' %}

{#{% form_theme form '@SfsPolymorphicFormType/polymorphic-form-theme.html.twig' '@SfsCms/cms_form_theme.html.twig' '@SfsCmsSylius/cms_form_theme.html.twig' %}#}

{% block title %}{{ ('admin_'~content~'.create.meta.title')|trans }}{% endblock %}
{% block header_title %}{{ ('admin_'~content~'.create.title')|trans }}{% endblock %}
{% block header_subtitle %}Manage your content pages{% endblock %}
{% block breadcrums_content %}
    {{ parent() }}
    <a class="section" href="{{ url('sfs_cms_admin_content_'~content~'_list') }}">{{ ('admin_'~content~'.list.breadcrumb')|trans }}</a>
    <i class="right chevron icon divider"></i>
    <a class="section active">{{ ('admin_'~content~'.create.breadcrumb')|trans }}</a>
{% endblock breadcrums_content %}


{% block content %}
    <h1 class="h3">{{ ('admin_'~content~'.create.title')|trans }}</h1>


    {{ form_start(form) }}

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="edit" role="tabpanel" aria-labelledby="edit-tab">
                <div class="container pt-3 pb-3">
                    {{ form_row(form.name) }}
                    {{ form_row(form.site) }}
                    {{ form_row(form.routes) }}
                    {{ form_rest(form) }}
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end align-items-center">
        <a href="{{ url('sfs_cms_admin_content_'~content~'_list') }}" class="btn btn-outline-secondary">{{ ('admin_'~content~'.create.actions.cancel.button')|trans }}</a>
        <input type="submit" value="{{ ('admin_'~content~'.create.actions.create.button')|trans }}" class="btn btn-primary ms-3" />
    </div>
    {{ form_end(form) }}
{% endblock content %}
