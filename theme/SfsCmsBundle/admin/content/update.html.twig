{% trans_default_domain 'sfs_cms_contents' %}

{% extends '@SfsCms/admin_layout.html.twig' %}

{% block title %}{{ ('admin_'~content~'.update.meta.title')|trans({'%name%':entity.name}) }}{% endblock %}

{% form_theme form '@SfsPolymorphicFormType/polymorphic-form-theme.html.twig' '@SyliusUi/Form/theme.html.twig' '@SfsCms/cms_form_theme.html.twig' %}

{% block breadcrums_content %}
    {{ parent() }}
    <a href="{{ url('sfs_cms_admin_content_'~content~'_list') }}">{{ ('admin_'~content~'.list.breadcrumb')|trans }}</a><i class="right chevron icon divider"></i>
    <span class="active section" aria-current="content">{{ ('admin_'~content~'.update.breadcrumb')|trans({'%name%':entity.name}) }}</span>
{% endblock breadcrums_content %}

{% block content %}
    <h1 class="h3">{{ ('admin_'~content~'.update.title')|trans({'%name%':entity.name}) }}</h1>

    {% include '@SfsCms/admin/content/_content_tabs.html.twig' with {'current':'update', 'content':content, 'entity':entity} %}

    <div class="ui bottom attached active tab segment">
        {{ form_start(form,{'attr':{'class':'ui form'}}) }}
            {{ form_row(form.name) }}
            {{ form_rest(form) }}
            <div class="ui hidden divider"></div>
            <div class="ui buttons">
                <button class="ui labeled icon primary button" type="submit"><i class="save icon"></i> {{ ('admin_'~content~'.update.actions.update.button')|trans }}</button>
                <a href="{{ url('sfs_cms_admin_content_'~content~'_list') }}" class="ui button">{{ ('admin_'~content~'.update.actions.cancel.button')|trans }}</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock content %}
