{% trans_default_domain 'sfs_cms_admin' %}

{% for route in entities %}
    <tr>
        <td class="p-3">{{ route.id }}</td>
        <td class="p-3">{{ route.site|sfs_cms_site_name }}</td>
        <td class="p-3">
            {% for path in route.paths %}
                <a href="{{ sfs_cms_url_fixed(path) }}" target="_blank">{{ sfs_cms_path_fixed(path) }}</a><br/>
            {% endfor %}
        </td>
        <td class="p-3">{{ ('admin_routes.types.'~route.type~'.name')|trans }}</td>
        <td class="p-3">{{ route.content.name|default('') }}</td>
        <td class="p-3 text-end">
            <a href="{{ url('sfs_cms_admin_routes_update', {'route':route}) }}">{{ 'admin_routes.list.actions.update.link'|trans }}</a>
        </td>
    </tr>
{% endfor %}