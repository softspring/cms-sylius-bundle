{% extends '@!SfsCms/forms/menus_theme.html.twig' %}


{% block menu_item_collection_label %}
    {% trans_default_domain 'sfs_cms_admin' %}
    <div class="row my-4">
        <div class="col-sm-6">
            {% set element = 'p' %}
            {% set label_attr = label_attr | merge({'class':'h4'}) %}

            {% if label is not same as(false) -%}
                {% if label is empty -%}
                    {%- if label_format is not empty -%}
                        {% set label = label_format|replace({
                            '%name%': name,
                            '%id%': id,
                        }) %}
                    {%- else -%}
                        {% set label = name|humanize %}
                    {%- endif -%}
                {%- endif -%}
                <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>{{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}</{{ element|default('label') }}>
            {%- endif -%}
        </div>
    </div>
{% endblock menu_item_collection_label %}

{% block menu_item_collection_widget -%}
    {% from '@SyliusResource/Macros/notification.html.twig' import error %}
    {% from '@SfsCms/forms/_macros.html.twig' import collectionItem %}

    {% set attr = attr|merge({'class': attr.class|default ~ ' controls collection-widget'}) %}

    {% spaceless %}
        <div {{ block('widget_container_attributes') }}>

            {{ error(form.vars.errors) }}

            <div data-collection="collection" id="{{ id }}_container"
                  class="row collection-list"
                  data-collection-prototype="{{ collectionItem(prototype, allow_delete, button_delete_label, '__name__', true)|e }}"
                  data-collection-prototype-name="{{ prototype.vars.name }}"
            >
                {% for child in form %}
                    {{ collectionItem(child, allow_delete, button_delete_label, loop.index0, true) }}
                {% endfor %}
            </div>
            {% if prototype is defined and allow_add %}
                <div class="ui hidden divider"></div>
                <a class="ui labeled icon button primary"
                   data-collection-action="add"
                   data-collection-target="{{ id }}_container"
                >
                    <i class="icon plus"></i>
                    {{ button_add_label|trans }}
                </a>
            {% endif %}
        </div>
    {% endspaceless %}
{%- endblock menu_item_collection_widget %}
