{% macro collectionItem(form, allow_delete, button_delete_label, index, allow_up_down = false) %}
    {% spaceless %}
        <div data-collection="node"
             data-collection-index="{{ index }}"
             class="collection-item">
            <div class="collection-box{% if form|length == 1 %} unique-field{% endif %}">
                <div class="ui grid">
                    <div class="fourteen wide column">
                        <div class="fields">
                            {% if not form.children|length %}
                                {{ form_widget(form) }}
                            {% else %}
                                {{ form_rest(form) }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="one wide column middle aligned">
                        {#{% if allow_up_down %}
                            <div class="text-right">
                                <a href="#" data-collection-action="up" class="ui circular icon button remove_route_path">
                                    <i class="icon times"></i>
                                </a>
                                <a href="#" data-collection-action="down" class="ui circular icon button remove_route_path">
                                    <i class="icon times"></i>
                                </a>
                            </div>
                        {% endif %}#}
                        {% if allow_delete %}
                            <div class="text-right">
                                <a href="#" data-collection-action="delete" class="negative ui circular icon button remove_route_path">
                                    <i class="icon times"></i>
                                    {#                                {{ button_delete_label|trans }}#}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endmacro %}

