{% set content_entity = content_entity|default(entity) %}
{% trans_default_domain 'sfs_cms_contents' %}

<ul class="ui top attached tabular menu" id="myTab" role="tablist">
    {% block tabs %}
        {% for item in sfs_cms_admin_content_menu(current, content_entity) %}
            <li class="{{ item.active|default(false) ? 'active' : '' }} item">
                {% if not (item.disabled|default(false)) %}
                    <a href="{{ item.url|default('#') }}">{{ item.text }}</a>
                {% else %}
                    <a><em>{{ item.text }}</em></a>
                {% endif %}
            </li>
        {% endfor %}
    {% endblock %}
</ul>
