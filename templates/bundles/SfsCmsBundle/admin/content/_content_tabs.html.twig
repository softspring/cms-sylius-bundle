{% set content_entity = content_entity|default(entity) %}
{% trans_default_domain 'sfs_cms_contents' %}

<ul class="ui top attached tabular menu" id="myTab" role="tablist">
    {% block tabs %}
        {% for item in sfs_cms_admin_content_menu(current, content_entity) %}
            <li class="{{ item.active|default(false) ? 'active' : '' }} item">
                {% if not (item.disabled|default(false)) %}
                    <a href="{{ item.url|default('#') }}">{{ item.text }}</a>
                {% else %}
                    <a><em>{{ item.text }}</em></a>
                {% endif %}
            </li>
        {% endfor %}
        <li class="item">
            {% if not content_config.admin.duplicate.is_granted or is_granted(content_config.admin.duplicate.is_granted, entity) %}
                <a class="ui primary labeled icon button" href="{{ url('sfs_cms_admin_content_'~content_type~'_duplicate', {'content':entity}) }}">
                    <i class="icon copy outline"></i>{{ ('admin_page.tabs_menu.duplicate')|trans }}</a>
            {% else %}
                <a class="ui primary labeled icon button disabled">
                    <i class="icon copy outline"></i>{{ ('admin_page.tabs_menu.duplicate')|trans }}</a>
            {% endif %}
        </li>
    {% endblock %}
</ul>
