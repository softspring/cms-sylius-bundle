{% trans_default_domain 'sfs_cms_contents' %}

{% for entity in entities %}
    <tr class="item">
        <td class="p-3">{{ entity.name }}</td>
        <td class="p-3">{{ entity.sites|map((site) => site|sfs_cms_site_name)|join(', ') }}</td>
        <td class="p-3">{{ entity.publishedVersion ? entity.publishedVersion.createdAt|date('H:i d-m-Y') : 'no' }}</td>
        <td class="p-3 text-end">
            <a href="{{ url('sfs_cms_admin_content_'~content~'_details', {'content':entity}) }}">{{ ('admin_'~content~'.list.actions.details.link')|trans }}</a>
        </td>
    </tr>
{% endfor %}
